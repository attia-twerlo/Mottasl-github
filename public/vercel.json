{
  "rewrites": [
    {
      "source": "/campaigns",
      "destination": "/index.html"
    },
    {
      "source": "/campaigns/(.*)",
      "destination": "/index.html"
    },
    {
      "source": "/contacts",
      "destination": "/index.html"
    },
    {
      "source": "/contacts/(.*)",
      "destination": "/index.html"
    },
    {
      "source": "/analytics",
      "destination": "/index.html"
    },
    {
      "source": "/messages",
      "destination": "/index.html"
    },
    {
      "source": "/notifications", 
      "destination": "/index.html"
    },
    {
      "source": "/settings",
      "destination": "/index.html"
    },
    {
      "source": "/((?!api|_next|static|favicon\\.ico|.*\\.).*)",
      "destination": "/index.html"
    }
  ]
}